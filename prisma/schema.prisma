// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String?
  books     Book[]   // Relation to Book model
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Book {
  id        Int      @id @default(autoincrement())
  title     String
  author    String
  status    String   @default("To Read") // Values: "To Read", "Reading", "Finished"
  cover_url String?  // Optional field for a book cover image URL
  notes     String?  // Field for personal notes/bio
  userId    String   // Foreign key to link to the User
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
